<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_margin="5dp"
    android:background="@drawable/shape_radius"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/item_chartfrag_iv"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_yanjiu_fs"/>
    <TextView
        android:id="@+id/item_chartfrag_Tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="烟酒茶"
        android:textSize="18sp"
        android:layout_toRightOf="@id/item_chartfrag_iv"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/item_chartfrag_tv_pertion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22.3%"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/item_chartfrag_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥ 123.99"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>