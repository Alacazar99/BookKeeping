<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/dialog_yusuan_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/set_money"
        android:layout_marginBottom="10dp"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <ImageView
        android:id="@+id/dialog_budget_iv_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ih_error"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/dialog_budget_moneylogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ï¿¥"
        android:layout_below="@id/dialog_yusuan_title"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/dialog_budget_moneyEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textSize="18sp"
        android:inputType="numberDecimal"
        android:layout_toRightOf="@id/dialog_budget_moneylogo"
        android:layout_alignBaseline="@id/dialog_budget_moneylogo"
        android:background="@color/white">
        <requestFocus/>
    </EditText>
    <Button
        android:id="@+id/dialog_budget_btn_ensure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ensure"
        android:background="@drawable/shape_green"
        android:layout_below="@id/dialog_budget_moneylogo"
        android:layout_marginTop="10dp"/>


</RelativeLayout>