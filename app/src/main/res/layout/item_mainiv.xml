<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:background="@drawable/shape_radius">

    <ImageView
        android:id="@+id/item_main_iv"
        android:layout_width="45dp"
        android:layout_centerVertical="true"
        android:layout_height="45dp"
        android:src="@mipmap/ic_yanjiu_fs"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_main_iv"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_mainTv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="烟酒"
            android:textStyle="bold"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/item_mainTv_beizhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_mainTv_title"
            android:text="备注"
            android:layout_marginTop="5dp"
            android:textSize="12sp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_mainTv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="$29.9"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/item_mainTv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="今天 18:3622"
            android:layout_below="@id/item_mainTv_money"
            android:layout_marginTop="5dp"
            android:textSize="12sp"/>


    </RelativeLayout>

</RelativeLayout>